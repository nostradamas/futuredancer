<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fdw.mybatis.mapper.TeacherMapper">

	
	<select id="selectTeachersInPage" resultType="TeacherBean">
		SELECT * 
		FROM teacher 
		<where>
			<if test="type != null and type != 0">type = #{type}</if>
			<if test="atHome != null and atHome != 0">and atHome = #{atHome}</if>
			<choose>
		        <when test="tabs != null and tabs.size() > 0">
		            and homeId in
			        <foreach collection="tabs" item="tId" index="index"
			            open="(" close=")" separator=",">
			            #{tId}
			        </foreach>
		        </when>
		        <otherwise>
		        	<if test="homeId != null">and homeId = #{homeId}</if>
		        </otherwise>
		    </choose>
        </where>
        ORDER BY type,sort desc
		LIMIT #{start}, #{pageSize}
	</select>

	<select id="selectTotal" resultType="java.lang.Integer">
		SELECT count(*) 
		FROM teacher 
		<where>
			<if test="type != null and type != 0">type = #{type}</if>
			<if test="atHome != null and atHome != 0">and atHome = #{atHome}</if>
			<choose>
		        <when test="tabs != null and tabs.size() > 0">
		            and homeId in
			        <foreach collection="tabs" item="tId" index="index"
			            open="(" close=")" separator=",">
			            #{tId}
			        </foreach>
		        </when>
		        <otherwise>
		        	<if test="homeId != null">and homeId = #{homeId}</if>
		        </otherwise>
		    </choose>
        </where>
	</select>

</mapper>